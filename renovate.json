{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":maintainLockFilesWeekly",
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "groupName": "backend",
      "matchFileNames": [
        "backend/pyproject.toml",
        "backend/.python-version",
        "backend/Dockerfile*"
      ]
    },
    {
      "groupName": "frontend",
      "matchFileNames": [
        "frontend/package.json",
        "frontend/Dockerfile*"
      ]
    },
    {
      "groupName": "infrastructure",
      "matchFileNames": [
        "**/compose.*.yml",
        "**/compose.yml"
      ]
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ]
}