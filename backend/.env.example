GITHUB_OAUTH_CLIENT_SECRET='github-oauth-client-secret'     # ðŸ”€ Client secret for GitHub OAuth

# Settings used to configure the email server for sending emails from the app.
EMAIL_HOST='smtp.example.com'                               # ðŸ”€
EMAIL_USERNAME='your.email@example.com'                     # ðŸ”€ Username for the SMTP server
EMAIL_PASSWORD='your-email-password'                        # ðŸ”€ Password for the SMTP server
EMAIL_FROM='Your Name <your.sending.alias.@example.com>'    # ðŸ”€ Email address from which the emails are sent. Can be different from the SMTP server username.
EMAIL_REPLY_TO='your.replyto.alias.@example.com'            # ðŸ”€ Email address to which replies are sent. Can be different from the SMTP server username.

# Redis settings for caching (disposable email domains, sessions, etc.)
REDIS_HOST='localhost'                                      # ðŸ”€ Redis server host (use 'cache' in Docker)
REDIS_PORT='6379'                                           # ðŸ”€ Redis server port
REDIS_DB='0'                                                # ðŸ”€ Redis database number (0-15)
